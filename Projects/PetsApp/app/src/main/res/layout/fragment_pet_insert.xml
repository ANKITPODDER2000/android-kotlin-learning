<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="32dp"
    tools:context=".fragment.PetInsertFragment">

    <Button
        android:id="@+id/btnInsertRandom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Insert Random Pet" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Insert your own pet details"
        android:textAlignment="center"
        android:textSize="26sp" />

    <EditText
        android:id="@+id/tvPetName"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:hint="Pet Name"
        android:maxLines="1"
        android:padding="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/tvPetAge"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Age"
            android:inputType="number"
            android:maxLines="1"
            android:padding="8dp" />

        <Spinner
            android:id="@+id/spPetGender"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="it will take pet's gender" />

    </LinearLayout>

    <EditText
        android:id="@+id/tvPetBreed"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:padding="8dp"
        android:layout_marginBottom="16dp"
        android:hint="Pet Breed"
        android:maxLines="1" />

    <Button
        android:id="@+id/btnInsetMyPet"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Inset my Pet" />
</LinearLayout>